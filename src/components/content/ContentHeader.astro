---
// Reusable hero section for playlists, albums, and artists
interface Props {
  type: 'playlist' | 'album' | 'artist';
  image: string;
  title: string;
  description?: string;
  owner?: string;
  metadata?: string;
}

const { type, image, title, description, owner, metadata } = Astro.props;
const isArtist = type === 'artist';
---

<div class="bg-gradient-to-b from-indigo-900 to-spotify-gray p-6 md:p-8">
  <div class="flex items-end gap-6">
    <!-- Image -->
    <img
      src={image}
      alt={title}
      class={`w-48 h-48 md:w-56 md:h-56 object-cover shadow-2xl flex-shrink-0 ${isArtist ? 'rounded-full' : 'rounded'}`}
    />

    <!-- Info -->
    <div class="flex-1 min-w-0 pb-2">
      <p class="text-sm text-white font-semibold uppercase mb-2">{type}</p>
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white mb-6 break-words">
        {title}
      </h1>
      {description && (
        <p class="text-sm text-gray-200 mb-4">{description}</p>
      )}
      <div class="flex items-center gap-2 text-sm text-white">
        {owner && <span class="font-semibold">{owner}</span>}
        {metadata && (
          <>
            {owner && <span>â€¢</span>}
            <span>{metadata}</span>
          </>
        )}
      </div>
    </div>
  </div>
</div>
