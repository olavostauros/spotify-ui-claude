---
// Search input component
import Icon from '../Icon.astro';

interface Props {
  placeholder?: string;
  value?: string;
}

const { placeholder = 'What do you want to listen to?', value = '' } = Astro.props;
---

<div class="relative">
  <div class="absolute left-3 top-1/2 -translate-y-1/2 pointer-events-none">
    <Icon name="search" class="w-5 h-5 text-gray-400" />
  </div>
  <input
    type="text"
    class="w-full bg-white text-black rounded-full pl-12 pr-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-white"
    placeholder={placeholder}
    value={value}
  />
  {value && (
    <button
      class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-600 hover:text-black transition-colors"
      aria-label="Clear search"
    >
      <Icon name="x-circle" class="w-5 h-5" />
    </button>
  )}
</div>
